<!-- Header Start -->
<%- include('layout/header') %>
<!-- Header End -->

<!-- body start -->
<div class="px-44 py-16 w-full min-h-screen h-full flex justify-center item-center">
  <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data" class="">
    <div class="border rounded-xl w-96 bg-white ">
      <h1 class="text-center p-2 font-semibold text-white rounded-t-xl bg-blue-500">Edit User (<%= user.name %>) </h1>
      <div class="p-2 flex flex-col gap-3">
        <div>
          <label for="name" class="font-semibold">Name</label>
          <input type="text" value="<%= user.name %>" required name="name" class="w-full mt-1 bg-transparent w-full border border-black/40 outline-none p-2 rounded-lg font-semibold text-sm">
        </div>
        <div>
          <label for="email">Email</label>
          <input type="email" value="<%= user.email %>" required name="email" class="w-full mt-1 bg-transparent w-full border border-black/40 outline-none p-2 rounded-lg font-semibold text-sm">
        </div>
        <div>
          <label for="phone">Phone</label>
          <input type="number" value="<%= user.phone %>" required name="phone" class="w-full mt-1 bg-transparent w-full border border-black/40 outline-none p-2 rounded-lg font-semibold text-sm">
        </div>
        <div>
          <label for="image">Select Image</label>
          <input type="file" name="image" class="w-full mt-1 bg-transparent w-full border border-black/40 outline-none p-2 rounded-lg font-semibold text-sm">
          <img src="/<%= user.image %>" alt="" class="w-20 h-20 mt-2">
        </div>
        <input type="hidden" name="old_image" value="<%= user.image %>">
        <div>
          <input type="submit" name="submit" value="Update User" class="text-center w-full mt-4 p-2 bg-green-500 font-semibold text-white rounded-lg cursor-pointer">
        </div>
      </div>

    </div>
  </form>
</div>
<!-- body end -->

<!-- Footer Start -->
<%- include('layout/footer') %>
<!-- Footer End -->