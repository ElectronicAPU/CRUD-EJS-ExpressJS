<!-- Header Start -->
<%- include('layout/header') %>
<!-- Header End -->

<!-- body start -->
<div class="px-4 sm:px-44 sm:py-16">
  <div>
    <% if (message) {%>
    <div role="alert" class="bg-green-100/20 border text-xl font-semibold border-green-500 text-green-500 rounded-lg p-4 flex justify-between">
      <span><%= message.message %></span>
      <button type="button" data-bs-disniss="alert" class="text-black" aria-label="Close">
        <i class="fa-solid fa-x border border-black p-1 "></i>
      </button>
    </div>
    <% } %>
  </div>
  <div class="">
    <div class="mx-auto max-w-7xl">
      <div class="bg-white ">
        <div class="px-4 sm:px-6 lg:px-8">
          <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
              <div class="inline-block min-w-full py-2 align-middle  ">
                <% if (users) { %>
                <table class="min-w-full divide-y divide-gray-700 ">
                  <thead>
                    <tr>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white">ID</th>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white">Image</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Name</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Email</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Phone</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Action</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-800 bg-white">
                    <% users.forEach((row, index) => { %>
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium "><%= index + 1 %></td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm "><img class="w-10 h-10 rounded-full" src="<%= row.image %>" alt="logo"></td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm "><%= row.name %></td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm "><%= row.email %></td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm "><%= row.phone %></td>
                      <td class="whitespace-nowrap py-4 pl-3 text-sm font-medium sm:pr-0">
                        <a href="/edit/<%= row._id %>" class="text-indigo-400 hover:text-indigo-300"><i class="fas fa-edit fa-lg mx-1"></i></a>
                        <a href="/delete/<%= row._id %>" class="text-red-400 hover:text-red-300"><i class="fas fa-trash fa-lg mx-1"></i></a>
                      </td>
                    </tr>
                    <% }) %>



                    <!-- More people... -->
                  </tbody>
                </table>
                <%  } else {%>
                <h1>No user found</h1>
                <%  } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- body end -->

<!-- Footer Start -->
<%- include('layout/footer') %>
<!-- Footer End -->